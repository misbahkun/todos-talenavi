	"item": [
		{
			"name": "Create Todo",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"Implement Todo API\",\n  \"assignee\": \"Misbahudin\",\n  \"due_date\": \"2025-12-31\",\n  \"time_tracked\": 0,\n  \"status\": \"pending\",\n  \"priority\": \"high\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/todos",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"todos"
					]
				},
				"description": "Create a new Todo item.\n\nFields:\n- title (required)\n- assignee (optional)\n- due_date (required, YYYY-MM-DD)\n- time_tracked (numeric, default 0)\n- status (optional: pending|open|in_progress|completed, default pending)\n- priority (required: low|medium|high)"
			},
			"response": []
		},
		{
			"name": "Export Todos (Excel)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/todos/export?title=Implement&assignee=Janichan&start=2025-01-01&end=2025-12-31&min=0&max=100&status=pending,in_progress&priority=low,high",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"todos",
						"export"
					],
					"query": [
						{
							"key": "title",
							"value": "Implement"
						},
						{
							"key": "assignee",
							"value": "Janichan"
						},
						{
							"key": "start",
							"value": "2025-01-01"
						},
						{
							"key": "end",
							"value": "2025-12-31"
						},
						{
							"key": "min",
							"value": "0"
						},
						{
							"key": "max",
							"value": "100"
						},
						{
							"key": "status",
							"value": "pending,in_progress"
						},
						{
							"key": "priority",
							"value": "low,high"
						}
					]
				},
				"description": "Export filtered Todo list into Excel file.\nThe response should be an .xlsx file containing todos and summary row at the bottom."
			},
			"response": []
		},
