						"api",
						"chart"
					],
					"query": [
						{
							"key": "type",
							"value": "status"
						}
					]
				},
				"description": "Get summary of todos grouped by status.\n\nExpected JSON:\n{\n  \"status_summary\": {\n    \"pending\": 2,\n    \"open\": 1,\n    \"in_progress\": 3,\n    \"completed\": 5\n  }\n}"
			},
